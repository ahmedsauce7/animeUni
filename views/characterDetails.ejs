<h1>Character Details:</h1>
<form action="/auth/logout" method="post">
  <button type="submit">Log out</button>
</form>

<div class="updateBackground">
  <div class="pageCtr">
  <div class="box">
    <div class="detailsPage">
      <div class="pageText">
         <h1><%= character.name %> Details:</h2>  
        <p>
          <%= character.gender %> <%= character.nickname %> <%=
          character.weakness %>
        </p>
        <p>Universe: <%= character.universe %></p>
        <p>Weapon: <%= character.weapons %></p>
        <a href="/characters/<%= character.id %>/update"
          class="whiteButton">Change Your Character</a>  
        <a href="/characters/<%= character.id %>/delete" class="whiteButton">Delete this character</a>
      </div>
    </div>
  </div>
  </div>
</div>
