<h1>Update</h1>
<form action="/auth/logout" method="post">
    <button type="submit">Log out</button>
  </form>
<div class="updateBackground">
    <div class="pageCtr">
    <div class="box">
      <div class="pageText">
        <h1>Change your character's name, occupation and allegiance below:</h1>
        <form action="/characters/<%= findChar._id %>/update" method="POST">
          <ul class="wrapper">
            <li class="form-row">
              <label>Name:</label>
              <input type="text" name="name" value="<%= findChar.name %>" />
            </li>
            <li class="form-row">
              <label>Weapon of choice:</label>
                <select name="weapon">
                  <option value="KAMEHAMEHA">KAMEHAMEHA</option>
                  <option value="SHARINGAN">SHARINGAN</option>
                  <option value="FIRE BREATH STYLE">FIRE BREATH STYLE</option>
                  <option value="BANKAI">BANKAI</option>
                  <option value="ULTRA INSTINCT">ULTRA INSTINCT</option>
                </select>
            </li>
            <li class="form-row">
              <label>Universe:</label>
                <select name="universe" required>
                  <option value="Human">Human</option>
                  <option value="Sayian">Sayian</option>
                  <option value="Shinobi">Shinobi</option>
                  <option value="Demon">Demon</option>
                  <option value="Ghoul">Ghoul</option>
                  <option value="Android">Android</option>
                  <option value="Alien">Alian</option>
                </select>
            </li>
            <li class="form-row">
              <button type="submit">Apply Changes!</button>
            </li>
            <li class="form-row">
              <a href="/characters/<%= findChar._id%>/details" class="whiteButton"
                >Cancel</a
              >
            </li>
          </ul>
        </form>
      </div>
    </div>
    </div>
  </div>
  
  